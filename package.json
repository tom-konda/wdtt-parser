{
  "name": "@tom-konda/wdtt-parser",
  "version": "2.0.5",
  "main": "lib/wdtt-parser.cjs.js",
  "author": "Tom Konda",
  "license": "MIT",
  "directories": {
    "test": "src/tests/"
  },
  "types": "./declaration/wdtt-parser/index.d.ts",
  "scripts": {
    "prebuild": "npm-run-all clean:*",
    "build": "npm-run-all lint test --parallel ts:build-* --serial rollup:*-banner rollup:trans-*",
    "postbuild": "npm-run-all clean:temp doc-gen",
    "ts:build-lib": "tsc -p ./src/ts/lib",
    "clean:build": "node -e \"require('shelljs').rm('-R', ['./lib', './doc']);\"",
    "clean:temp": "node -e \"require('shelljs').rm('-R', ['./temp']);\"",
    "doc-gen": "typedoc --name WDTTParser --excludeExternals --target es2015 --module es2015 --includeDeclarations --out ./doc ./declaration/wdtt-parser/index.d.ts",
    "rollup:lib-banner": "rollup -c ./rollup-configs/rollup.config.mjs",
    "rollup:trans-node": "rollup -c ./rollup-configs/rollup.config.cjs.mjs",
    "lint": "npm-run-all lint:*",
    "lint:src": "eslint src/**/*.ts",
    "lint:declaration": "eslint declaration/**/*.d.ts",
    "test": "cross-env TS_NODE_PROJECT=src/tests/tsconfig.json mocha --require espower-typescript/guess src/tests/**.ts"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.12.47",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.4.0",
    "espower-typescript": "^9.0.2",
    "iconv-lite": "^0.6.2",
    "mocha": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "power-assert": "^1.6.1",
    "rollup": "^2.22.0",
    "shelljs": "^0.8.4",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7"
  }
}
