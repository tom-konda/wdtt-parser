{
  "name": "@tom-konda/wdtt_parser",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Tom Konda",
  "license": "MIT",
  "directories": {
    "test": "src/test/"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm-run-all test --parallel ts:build-* --serial rollup:*-banner rollup:trans-*",
    "postbuild": "npm run doc-gen",
    "ts:build-lib": "tsc -p ./src/ts/lib",
    "clean": "node -e \"require('shelljs').rm('-R', ['./temp','./lib', './doc', './index.js']);\"",
    "rollup:lib-banner": "rollup -c ./rollup-configs/rollup.config.js",
    "rollup:trans-node": "rollup -c ./rollup-configs/rollup.config.cjs.js",
    "test": "cross-env TS_NODE_TRANSPILE_ONLY=1 mocha --require espower-typescript/guess src/test/**.ts"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "cross-env": "^5.2.0",
    "espower-typescript": "^9.0.1",
    "iconv-lite": "^0.4.24",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "power-assert": "^1.6.1",
    "rollup": "^0.67.1",
    "shelljs": "^0.8.3",
    "typedoc": "^0.12.0",
    "typescript": "^3.1.3"
  }
}
